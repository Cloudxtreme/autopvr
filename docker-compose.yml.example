version: '3'
services:
  plex:
    image: plexinc/pms-docker:plexpass
    restart: unless-stopped
    hostname: plex
    ports:
      - "32400:32400/tcp"
      - "3005:3005/tcp"
      - "8324:8324/tcp"
      - "32469:32469/tcp"
      - "1900:1900/udp"
      - "32410:32410/udp"
      - "32412:32412/udp"
      - "32413:32413/udp"
      - "32414:32414/udp"
    expose:
      - "32400"
    environment:
      - PLEX_UID=2000
      - PLEX_GID=2000
    volumes:
      - ./config/plex:/config
      - ./tmp:/transcode
      - ./data:/data
  sonarr:
    image: twanislas/sonarr
    restart: unless-stopped
    hostname: sonarr
    ports:
      - "8989:8989/tcp"
      - "9898:9898/tcp"
    environment:
      - SONARR_UID=2000
      - SONARR_GID=2000
    volumes:
      - ./config/sonarr:/config
      - ./data:/data
  jackett:
    image: twanislas/jackett
    restart: unless-stopped
    hostname: jackett
    ports:
      - "9117:9117/tcp"
    expose:
      - "9117"
    environment:
      - JACKETT_UID=2000
      - JACKETT_GID=2000
    volumes:
      - ./config/jackett:/config
      - ./data/Downloads:/data
  qbittorrent:
    image: twanislas/qbittorrent
    restart: unless-stopped
    hostname: qbittorrent
    ports:
      - "8080:8080/tcp"
      - "53160:53160"
    environment:
      - QBITTORRENT_UID=2000
      - QBITTORRENT_GID=2000
    volumes:
      - ./config/qbittorrent:/config
      - ./data/Downloads:/data